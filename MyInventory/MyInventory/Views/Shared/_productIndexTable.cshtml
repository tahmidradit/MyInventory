@model IEnumerable<Product>

<div>
    @if (Model.Count() > 0)
    {
        <div class="mt-2">
            <table class="table table-hover table-bordered table-sm text-center" style="background-color:lightskyblue" width="100%">
                <thead class="table table-primary">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Id)</th>
                        <th>@Html.DisplayNameFor(m => m.Name)</th>
                        <th>@Html.DisplayNameFor(m => m.Description)</th>
                        <th>@Html.DisplayNameFor(m => m.Price)</th>
                        <th>@Html.DisplayNameFor(m => m.Image)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var items in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => items.Id)</td>
                            <td>@Html.DisplayFor(m => items.Name)</td>
                            <td>@Html.DisplayFor(m => items.Description)</td>
                            <td>@Html.DisplayFor(m => items.Price)</td>
                            <td>@Html.DisplayFor(m => items.Image)</td>
                            <td>
                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@items.Id" class="btn btn-dark text-white btn-sm"><i class="fas fa-edit"></i> &nbsp; Edit</a>
                                <a class="btn btn-danger text-white btn-sm" asp-action="Delete" asp-controller="Product" asp-route-id="@items.Id"><i class="fas fa-trash-alt"></i> &nbsp; Delete</a>
                                <a class="btn btn-info text-white btn-sm" asp-controller="Product" asp-action="Details" asp-route-id="@items.Id"><i class="fas fa-info"></i> &nbsp; Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <br />
        <div class="alert alert-danger text-danger" role="alert">No Products available right now !</div>
    }
</div>

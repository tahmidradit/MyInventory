@using MyInventory.Models.ViewModels

@model OrderProductViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card" style="width: 18rem;">
  <div  class="card-body">
        <h5 class="card-title">@Model.Product.Name</h5>
        <p class="card-text">@Model.Product.Description</p>
        <p  class="card-text">@Model.Product.Price</p>
      <form   method="post" asp-controller="Product" asp-action="Details">
    
        <input  type="text" class="form-control mt-2" asp-for="@Model.Order.Name" />
        <input  type="text" class="form-control mt-2" asp-for="@Model.Order.Description" />
        <input  type="text"  class="form-control mt-2" asp-for="@Model.Order.Price" />
        <input type="number" class="form-control mt-2" asp-for="@Model.Order.Count" />
        <button class="btn btn-primary text-white form-control mt-2" type="submit"><i class="fas fa-plus"></i> &nbsp; Place Order</button>
   
      </form>
    
  </div>
</div>
